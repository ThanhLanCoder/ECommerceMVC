@model ECommerceMVC.Areas.Admin.Models.ViewModels.AccountVM

@{
    ViewData["Title"] = "Chi Tiết Khách Hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Chi Tiết Khách Hàng</h2>
            <p class="text-muted mb-0">Thông tin chi tiết của khách hàng</p>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.MaKh" class="btn btn-primary">
                <i class="bi bi-pencil-fill me-2"></i>Chỉnh sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-2"></i>Quay lại
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Left Column - Avatar & Info -->
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <img src="~/Client/Hinh/KhachHang/@Model.Hinh"
                         alt="Avatar"
                         class="rounded-circle mb-3"
                         style="width: 150px; height: 150px; object-fit: cover; border: 4px solid #f8f9fa;">

                    <h4 class="mb-1">@Model.HoTen</h4>
                    <p class="text-muted mb-3">@Model.Email</p>
                    <span class="badge bg-warning text-dark">
                        <i class="bi bi-star-fill me-1"></i>Thành viên Vàng
                    </span>
                </div>
            </div>
        </div>

        <!-- Right Column - Details -->
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle-fill text-primary me-2"></i>Thông tin cá nhân
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold text-secondary">
                                <i class="bi bi-envelope-fill text-primary me-2"></i>Email
                            </label>
                            <div class="p-2 bg-light rounded">@Model.Email</div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold text-secondary">
                                <i class="bi bi-person-fill text-primary me-2"></i>Họ và tên
                            </label>
                            <div class="p-2 bg-light rounded">@Model.HoTen</div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold text-secondary">
                                <i class="bi bi-phone-fill text-primary me-2"></i>Số điện thoại
                            </label>
                            <div class="p-2 bg-light rounded">
                                @(string.IsNullOrEmpty(Model.SoDienThoai) ? "Chưa cập nhật" : Model.SoDienThoai)
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold text-secondary">
                                <i class="bi bi-calendar-fill text-primary me-2"></i>Ngày sinh
                            </label>
                            <div class="p-2 bg-light rounded">
                                @(Model.NgaySinh.HasValue? Model.NgaySinh.Value.ToString("dd/MM/yyyy") : "Chưa cập nhật")
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold text-secondary">
                                <i class="bi bi-gender-ambiguous text-primary me-2"></i>Giới tính
                            </label>
                            <div class="p-2 bg-light rounded">
                                @(Model.GioiTinh ? "Nam" : "Nữ")
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold text-secondary">
                            <i class="bi bi-house-fill text-primary me-2"></i>Địa chỉ
                        </label>
                        <div class="p-2 bg-light rounded">
                            @(string.IsNullOrEmpty(Model.DiaChi) ? "Chưa cập nhật" : Model.DiaChi)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>