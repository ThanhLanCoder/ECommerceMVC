@model ECommerceMVC.Areas.Admin.Models.ViewModels.AccountVM

@{
    ViewData["Title"] = "Chỉnh Sửa Khách Hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Chỉnh Sửa Khách Hàng</h2>
            <p class="text-muted mb-0">Cập nhật thông tin khách hàng</p>
        </div>
        <div>
            <a asp-action="Details" asp-route-id="@Model.MaKh" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-2"></i>Quay lại
            </a>
        </div>
    </div>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="MaKh">
        <input type="hidden" asp-for="Hinh">

        <div class="row">
            <!-- Left Column - Avatar -->
            <div class="col-md-4">
                <div class="card shadow-sm mb-4">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <img src="~/Client/Hinh/KhachHang/@Model.Hinh"
                                 alt="Avatar"
                                 id="avatarPreview"
                                 class="rounded-circle mb-3"
                                 style="width: 150px; height: 150px; object-fit: cover; border: 4px solid #f8f9fa;">
                        </div>

                        <div class="mb-3">
                            <label for="avatarInput" class="btn btn-primary btn-sm">
                                <i class="bi bi-camera-fill me-2"></i>Thay đổi ảnh
                            </label>
                            <input type="file"
                                   id="avatarInput"
                                   name="HinhFile"
                                   accept="image/*"
                                   style="display: none;">
                        </div>

                        <h5 class="mb-1">@Model.HoTen</h5>
                        <p class="text-muted mb-0">@Model.Email</p>
                    </div>
                </div>

                <div class="alert alert-info">
                    <i class="bi bi-info-circle-fill me-2"></i>
                    <strong>Lưu ý:</strong> Email là tên đăng nhập và không thể thay đổi.
                </div>
            </div>

            <!-- Right Column - Form -->
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">
                            <i class="bi bi-pencil-square text-primary me-2"></i>Thông tin cá nhân
                        </h5>
                    </div>
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label">
                                    <i class="bi bi-envelope-fill text-primary me-2"></i>Email (Tên đăng nhập)
                                </label>
                                <input asp-for="Email" class="form-control" disabled>
                                <input type="hidden" asp-for="Email">
                                <small class="text-muted">Email không thể thay đổi</small>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="HoTen" class="form-label">
                                    <i class="bi bi-person-fill text-primary me-2"></i>Họ và tên
                                    <span class="text-danger">*</span>
                                </label>
                                <input asp-for="HoTen" class="form-control" placeholder="Nhập họ và tên">
                                <span asp-validation-for="HoTen" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="SoDienThoai" class="form-label">
                                    <i class="bi bi-phone-fill text-primary me-2"></i>Số điện thoại
                                    <span class="text-danger">*</span>
                                </label>
                                <input asp-for="SoDienThoai" class="form-control" placeholder="Nhập số điện thoại">
                                <span asp-validation-for="SoDienThoai" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="NgaySinh" class="form-label">
                                    <i class="bi bi-calendar-fill text-primary me-2"></i>Ngày sinh
                                </label>
                                <input asp-for="NgaySinh" type="date" class="form-control">
                                <span asp-validation-for="NgaySinh" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="GioiTinh" class="form-label">
                                    <i class="bi bi-gender-ambiguous text-primary me-2"></i>Giới tính
                                </label>
                                <select asp-for="GioiTinh" class="form-select">
                                    <option value="true">Nam</option>
                                    <option value="false">Nữ</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">
                                    <i class="bi bi-shield-check text-primary me-2"></i>Trạng thái
                                </label>
                                <select asp-for="HieuLuc" class="form-select">
                                    <option value="true">Hoạt động</option>
                                    <option value="false">Bị khóa</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DiaChi" class="form-label">
                                <i class="bi bi-house-fill text-primary me-2"></i>Địa chỉ
                            </label>
                            <textarea asp-for="DiaChi" class="form-control" rows="3" placeholder="Nhập địa chỉ"></textarea>
                            <span asp-validation-for="DiaChi" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-action="Details" asp-route-id="@Model.MaKh" class="btn btn-secondary">
                                <i class="bi bi-x-circle me-2"></i>Hủy
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle me-2"></i>Lưu thay đổi
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Preview avatar when file is selected
        document.getElementById('avatarInput').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('avatarPreview').src = e.target.result;
                }
                reader.readAsDataURL(file);
            }
        });
    </script>
}