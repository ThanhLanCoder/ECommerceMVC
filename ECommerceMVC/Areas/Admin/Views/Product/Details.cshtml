@model ECommerceMVC.Areas.Admin.Models.ViewModels.ProductItemVM

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid px-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    <i class="bi bi-box-seam me-2"></i>Chi tiết sản phẩm
                </h2>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.MaHH" class="btn btn-warning">
                        <i class="bi bi-pencil me-1"></i>Chỉnh sửa
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Quay lại
                    </a>
                </div>
            </div>

            <div class="row">
                <!-- Cột hình ảnh -->
                <div class="col-md-5">
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="bi bi-image me-2"></i>Hình ảnh sản phẩm</h5>
                        </div>
                        <div class="card-body text-center p-4">
                            @if (!string.IsNullOrEmpty(Model.Hinh))
                            {
                                <img src="~/Hinh/HangHoa/@Model.Hinh" alt="@Model.TenHH" class="img-fluid rounded shadow-sm" style="max-height: 400px;" />
                            }
                            else
                            {
                                <div class="text-muted py-5">
                                    <i class="bi bi-image fs-1 d-block mb-3"></i>
                                    <p>Không có hình ảnh</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Cột thông tin -->
                <div class="col-md-7">
                    <!-- Thông tin cơ bản -->
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Thông tin cơ bản</h5>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-md-4 fw-semibold text-muted">Mã sản phẩm:</div>
                                <div class="col-md-8">
                                    <span class="badge bg-secondary fs-6">@Model.MaHH</span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-4 fw-semibold text-muted">Tên sản phẩm:</div>
                                <div class="col-md-8">
                                    <h4 class="text-primary mb-0">@Model.TenHH</h4>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-4 fw-semibold text-muted">Danh mục:</div>
                                <div class="col-md-8">
                                    <span class="badge bg-success fs-6">@Model.TenLoai</span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-4 fw-semibold text-muted">Đơn giá:</div>
                                <div class="col-md-8">
                                    <h3 class="text-danger mb-0">@Model.DonGia.ToString("N0") VNĐ</h3>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-4 fw-semibold text-muted">Số lượng tồn:</div>
                                <div class="col-md-8">
                                    @if (Model.SoLuongTon > 0)
                                    {
                                        <span class="badge bg-success fs-6">
                                            <i class="bi bi-check-circle me-1"></i>Còn hàng (@Model.SoLuongTon)
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger fs-6">
                                            <i class="bi bi-x-circle me-1"></i>Hết hàng
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Mô tả ngắn -->
                    @if (!string.IsNullOrEmpty(Model.MoTaNgan))
                    {
                        <div class="card shadow-sm mb-4">
                            <div class="card-header bg-warning">
                                <h5 class="mb-0"><i class="bi bi-file-text me-2"></i>Mô tả ngắn</h5>
                            </div>
                            <div class="card-body">
                                <p class="mb-0">@Model.MoTaNgan</p>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Mô tả chi tiết -->
            @if (!string.IsNullOrEmpty(Model.MoTaChiTiet))
            {
                <div class="row">
                    <div class="col-12">
                        <div class="card shadow-sm">
                            <div class="card-header bg-success text-white">
                                <h5 class="mb-0"><i class="bi bi-card-text me-2"></i>Mô tả chi tiết</h5>
                            </div>
                            <div class="card-body">
                                <div class="content-text">
                                    @Html.Raw(Model.MoTaChiTiet.Replace("\n", "<br/>"))
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Action buttons -->
            <div class="row mt-4">
                <div class="col-12">
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Delete" asp-route-id="@Model.MaHH" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i>Xóa sản phẩm
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.MaHH" class="btn btn-warning">
                            <i class="bi bi-pencil me-1"></i>Chỉnh sửa
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-list me-1"></i>Danh sách sản phẩm
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .content-text {
        line-height: 1.8;
        font-size: 1rem;
    }
</style>