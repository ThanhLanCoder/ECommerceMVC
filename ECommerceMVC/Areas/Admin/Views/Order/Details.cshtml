@model ECommerceMVC.Areas.Admin.Models.ViewModels.OrderDetailsVM


@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid p-0">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Chi tiết đơn hàng #@Model.MaHd</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">Quay lại</a>
    </div>

    <!-- Thông tin khách hàng -->
    <div class="card mb-4">
        <div class="card-header">Thông tin khách hàng</div>
        <div class="card-body">
            <p><strong>Họ tên:</strong> @Model.HoTen</p>
            <p><strong>Điện thoại:</strong> @Model.DienThoai</p>
            <p><strong>Địa chỉ:</strong> @Model.DiaChi</p>
            <p><strong>Ngày đặt:</strong> @Model.NgayDat.ToString("dd/MM/yyyy HH:mm")</p>
            <p><strong>Trạng thái:</strong> 
                @switch(Model.MaTrangThai)
                {
                    case 0: <span class="badge bg-warning">Chờ xác nhận</span>; break;
                    case 1: <span class="badge bg-info">Đã thanh toán</span>; break;
                    case 2: <span class="badge bg-primary">Chờ giao hàng</span>; break;
                    case 3: <span class="badge bg-success">Đã giao hàng</span>; break;
                    case -1: <span class="badge bg-danger">Đã hủy</span>; break;
                }
            </p>
            <p><strong>Phương thức thanh toán:</strong> 
                @(Model.CachThanhToan == "COD" ? "COD" : "Payment")
            </p>
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-header">Mã QR đơn hàng</div>
        <div class="card-body text-center">
            <img src="@Url.Action("GenerateOrderQR", "Order", new { area = "Admin", id = Model.MaHd })"
                 alt="QR Code"
                 class="img-fluid"
                 style="max-width: 220px;" />

            <p class="mt-2 text-muted">
                Quét để xem chi tiết đơn hàng #@Model.MaHd
            </p>
        </div>
    </div>

    <!-- Danh sách sản phẩm -->
    <div class="card mb-4">
        <div class="card-header">Danh sách sản phẩm</div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-white sticky-top">
                        <tr>
                            <th style="min-width: 50px;">#</th>
                            <th style="min-width: 200px;">Tên sản phẩm</th>
                            <th style="min-width: 100px;">Đơn giá</th>
                            <th style="min-width: 100px;">Số lượng</th>
                            <th style="min-width: 120px;">Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Products != null && Model.Products.Any())
                        {
                            int index = 1;
                            foreach (var item in Model.Products)
                            {
                                <tr>
                                    <td>@index</td>
                                    <td>@item.TenHh</td>
                                    <td>@item.DonGia.ToString("#,##0")vnd</td>
                                    <td>@item.SoLuong</td>
                                    <td>@(item.DonGia * item.SoLuong)vnd</td>
                                </tr>
                                index++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-3">Không có sản phẩm nào</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="4" class="text-end"><strong>Phí vận chuyển:</strong></td>
                            <td>@Model.PhiVanChuyen$</td>
                        </tr>
                        <tr>
                            <td colspan="4" class="text-end"><strong>Tổng tiền:</strong></td>
                            <td>
                                @(Model.Products.Sum(p => p.DonGia * p.SoLuong) + Model.PhiVanChuyen)vnd
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
