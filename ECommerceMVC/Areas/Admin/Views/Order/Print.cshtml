@model ECommerceMVC.Areas.Admin.Models.ViewModels.OrderDetailsVM

@{
    Layout = null; // Không dùng layout chung
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <title>Đơn hàng #@Model.MaHd</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-4">

    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Đơn hàng #@Model.MaHd</h2>
            <small>@Model.NgayDat.ToString("dd/MM/yyyy HH:mm")</small>
        </div>

        <!-- Thông tin khách hàng -->
        <div class="card mb-4">
            <div class="card-header bg-light">Thông tin khách hàng</div>
            <div class="card-body">
                <p><strong>Họ tên:</strong> @Model.HoTen</p>
                <p><strong>Điện thoại:</strong> @Model.DienThoai</p>
                <p><strong>Địa chỉ:</strong> @Model.DiaChi</p>
                <p>
                    <strong>Trạng thái:</strong>
                    @switch(Model.MaTrangThai)
                    {
                        case 0: <span class="badge bg-warning text-dark">Chờ xác nhận</span>; break;
                        case 1: <span class="badge bg-info">Đã thanh toán</span>; break;
                        case 2: <span class="badge bg-primary">Chờ giao hàng</span>; break;
                        case 3: <span class="badge bg-success">Đã giao hàng</span>; break;
                        case -1: <span class="badge bg-danger">Đã hủy</span>; break;
                    }
                </p>
                <p><strong>Phương thức thanh toán:</strong> @(Model.CachThanhToan == "COD" ? "COD" : "Payment")</p>
            </div>
        </div>

        <!-- Danh sách sản phẩm -->
        <div class="card mb-4">
            <div class="card-header bg-light">Danh sách sản phẩm</div>
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Tên sản phẩm</th>
                            <th>Đơn giá</th>
                            <th>Số lượng</th>
                            <th>Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Products != null && Model.Products.Any())
                        {
                            int index = 1;
                            foreach (var item in Model.Products)
                            {
                                <tr>
                                    <td>@index</td>
                                    <td>@item.TenHh</td>
                                    <td>@item.DonGia.ToString("#,##0")vnd</td>
                                    <td>@item.SoLuong</td>
                                    <td>@(item.DonGia * item.SoLuong)vnd</td>
                                </tr>
                                index++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center">Không có sản phẩm</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Tổng tiền -->
        <div class="card">
            <div class="card-body d-flex justify-content-end flex-column align-items-end">
                <p><strong>Phí vận chuyển:</strong> @Model.PhiVanChuyen.ToString("#,##0")$</p>
                <p><strong>Tổng tiền:</strong> @(Model.Products.Sum(p => p.DonGia * p.SoLuong) + Model.PhiVanChuyen)$</p>
            </div>
        </div>
    </div>

    <script>
        window.onload = function () {
            window.print(); // tự động mở hộp thoại in
        }
    </script>
</body>
</html>
