@model ECommerceMVC.Models.ViewModels.PhanTrangHangHoaVM


@{
    ViewData["Title"] = "Home";
}

<!-- Modal Search Start -->
<div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content rounded-0">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Search by keyword</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body d-flex align-items-center">
                <form asp-controller="HangHoa" asp-action="Index" method="get" class="input-group w-100 mx-auto d-flex">
                    <input name="search" value="@Model.Search" type="search" class="form-control p-3" placeholder="keywords">
                    <button class="input-group-text p-3"><i class="fa fa-search"></i></button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Modal Search End -->

<!-- Fruits Shop Start-->
<div class="container-fluid fruite py-5">
    <div class="container py-5">
        <h1 class="mb-4">Electric Devices</h1>
        <div class="row g-4">
            <div class="col-lg-12">
                <div class="row g-4">
                    <div class="col-xl-3">
                        <form asp-controller="HangHoa" asp-action="Index" method="get" class="input-group w-75 mx-auto d-flex">
                            <input name="search" value="@Model.Search" type="search" class="form-control p-3" placeholder="keywords">
                            <button class="input-group-text p-3"><i class="fa fa-search"></i></button>
                        </form>
                    </div>
                    <div class="col-6"></div>
                    <div class="col-xl-3">
                        <div class="bg-light ps-3 py-3 rounded d-flex justify-content-between mb-4">
                            <label for="fruits">Default Sorting:</label>
                            <select id="fruits" name="fruitlist" class="border-0 form-select-sm bg-light me-3" form="fruitform">
                                <option value="volvo">Nothing</option>
                                <option value="saab">Popularity</option>
                                <option value="opel">Organic</option>
                                <option value="audi">Fantastic</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row g-4">
                    <div class="col-lg-3">
                        <div class="row g-4">
                            @await Component.InvokeAsync("DanhMuc")
                        </div>
                    </div>
                    <div class="col-lg-9">
                        <div class="row g-4 justify-content-center">
                            @if (!Model.HangHoas.Any())
                            {
                                <div class="col-12 text-center">
                                    <h3 class="text-danger">Không tìm thấy sản phẩm phù hợp!</h3>
                                </div>
                            }
                            else
                            {
                                @await Html.PartialAsync("ProductItem", Model)
                            }
                            <div class="pagination d-flex justify-content-center mt-5">
                                @if (Model.CurrentPage > 1)
                                {
                                    <a class="rounded"
                                       asp-action="Index"
                                       asp-route-page="@(Model.CurrentPage - 1)"
                                       asp-route-loai="@Model.MaLoai">&laquo;</a>
                                }

                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    <a class="rounded @(i == Model.CurrentPage ? "active" : "")"
                                       asp-action="Index"
                                       asp-route-page="@i"
                                       asp-route-loai="@Model.MaLoai">@i</a>
                                }

                                @if (Model.CurrentPage < Model.TotalPages)
                                {
                                    <a class="rounded"
                                       asp-action="Index"
                                       asp-route-page="@(Model.CurrentPage + 1)"
                                       asp-route-loai="@Model.MaLoai">&raquo;</a>
                                }
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Fruits Shop End-->
