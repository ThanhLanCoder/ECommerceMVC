<!-- Navbar start -->
<div class="container-fluid fixed-top">
    <div class="container-fluid px-0">

        <nav class="navbar navbar-expand-xl"
             style="background-color:#e8f5ff; box-shadow:0 2px 8px rgba(0,0,0,0.08);">

            <a asp-controller="HangHoa" asp-action="Index" class="navbar-brand">
                <h1 class="text-primary display-6">Electric</h1>
            </a>

            <button class="navbar-toggler py-2 px-3" type="button"
                    data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                    style="border:1px solid #0d6efd;">
                <span class="fa fa-bars text-primary"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav mx-auto">
                    <a asp-action="Index" asp-controller="HangHoa" class="nav-item nav-link active">Home</a>
                    <a asp-action="Index" asp-controller="HangHoa" class="nav-item nav-link">Shop</a>
                    <a href="#" class="nav-item nav-link">About</a>
                    <a href="#" class="nav-item nav-link">Contact</a>
                </div>

                <div class="d-flex m-3 me-0">
                    <button class="btn-search btn border border-primary btn-md-square rounded-circle me-4"
                            style="background-color:#ffffff;">
                        <i class="fas fa-search text-primary"></i>
                    </button>

                    @await Component.InvokeAsync("Cart")
                    @await Component.InvokeAsync("UserMenu")
                </div>
            </div>
        </nav>

    </div>
</div>
<!-- Navbar End -->
