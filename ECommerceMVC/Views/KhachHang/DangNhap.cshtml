@model ECommerceMVC.Models.ViewModels.DangNhapVM
@{
    ViewData["Title"] = "Đăng Nhập";
}

<div class="login-wrapper">
    <div class="login-container">
        <div class="card shadow-lg border-0">
            <div class="card-header">
                <i class="bi bi-shield-lock-fill fs-1 mb-2"></i>
                <h3>Đăng Nhập</h3>
                <p>Chào mừng bạn trở lại!</p>
            </div>
            <div class="card-body">
                <form asp-action="DangNhap" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <!-- Email -->
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-semibold">Email</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-envelope-fill"></i>
                            </span>
                            <input asp-for="Email" class="form-control" placeholder="example@email.com" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <!-- Mật khẩu -->
                    <div class="mb-3">
                        <label asp-for="MatKhau" class="form-label fw-semibold">Mật khẩu</label>
                        <div class="position-relative-custom">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-lock-fill"></i>
                                </span>
                                <input asp-for="MatKhau" class="form-control" placeholder="Nhập mật khẩu" id="passwordInput" />
                            </div>
                            <i class="bi bi-eye password-toggle" id="togglePassword"></i>
                        </div>
                        <span asp-validation-for="MatKhau" class="text-danger small"></span>
                    </div>

                    <!-- Remember me & Forgot password -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="form-check">
                            <input class="form-check-input remember-me" type="checkbox" id="rememberMe" name="RememberMe">
                            <label class="form-check-label" for="rememberMe">
                                Ghi nhớ đăng nhập
                            </label>
                        </div>
                        <a asp-action="QuenMatKhau" class="link-custom">Quên mật khẩu?</a>
                    </div>

                    <!-- Submit button -->
                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-login">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Đăng Nhập
                        </button>
                    </div>

                    <!-- Divider -->
                    <div class="divider">
                        <span>hoặc đăng nhập với</span>
                    </div>

                    <!-- Social login -->
                    <div class="social-login mb-4">
                        <button type="button" class="btn btn-social btn-google">
                            <i class="bi bi-google me-2"></i>Google
                        </button>
                        <button type="button" class="btn btn-social btn-facebook">
                            <i class="bi bi-facebook me-2"></i>Facebook
                        </button>
                    </div>

                    <!-- Sign up link -->
                    <div class="text-center">
                        <p class="text-muted mb-0">
                            Chưa có tài khoản?
                            <a asp-action="DangKy" class="link-custom fw-bold">Đăng ký ngay</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/Client/css/dangnhap.css">
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/Client/js/dangnhap.js"></script>
}